@model List<ContactModel>

@{
ViewBag.Title = "Kontakty";
Layout = "_Layout";
}

<h2>Kontakty</h2>
<a class="btn btn-primary" asp-action="Add" asp-controller="Contact">Dodaj Kontakt</a>
<h4>Lista Kontaktów</h4>
<table class="table">
    <thead>
    <tr>
        <th>Imię</th>
        <th>Nazwisko</th>
        <th>Akcje</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var entry in Model)
    {
    <tr>
        <td>@entry.FirstName</td>
        <td>@entry.LastName</td>
        <td>
            <a class="btn btn-success" asp-controller="Contact" asp-action="Edit" asp-route-id="@entry.Id">Edycja</a>
            <a class="btn btn-info" asp-controller="Contact" asp-action="Details" asp-route-id="@entry.Id">Szczegóły</a>
            <a class="btn btn-danger" asp-controller="Contact" asp-action="Delete" asp-route-id="@entry.Id">Usuń</a>
        </td>
    </tr>
    }
    </tbody>
</table>
